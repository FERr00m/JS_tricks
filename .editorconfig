
root=true

[*]
charset = utf-8
indent_style = space
tab_width = 2
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

# сторонние библиотеки или минифицированные файлы, лучше не трогать
[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = ignore
